<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_lead_user_rule" model="ir.rule">
            <field name="name">Crm by User Only</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">['|',('user_id', '=' ,user.id),('team_id.user_id', '=' ,user.id)]</field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="customer_domain_id" model="ir.ui.view">
            <field name="name">domain customer</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position="attributes">
                    <!-- Add your fields or attributes here -->
                    <attribute name="domain">['|',('user_id', '=', user_id),('team_id.user_id', '=' ,user_id)]</attribute>
                </xpath>
                <xpath expr="//group[@name='lead_partner']/field[@name='partner_id']" position="attributes">
                    <!-- Add your fields or attributes here -->
                    <attribute name="domain">['|',('user_id', '=', user_id),('team_id.user_id', '=' ,user_id)]</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>