<odoo>
    <data>
        <record model="ir.ui.view" id="view_partner_form_pos">
            <field name="name">res.partner.kanban.pos</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet/group//group//field[@name='vat']" position="after">
                    <field name="email_parent" widget="email"/>
                    <field name="phone_whatsapp" widget="phone"/>
                    <field name="phone_2" widget="phone"/>
                    <field name="profession"/>
                    <field name="note"/>
                    <field name="parent_name" readonly="0"/>
                    <field name="source"/>
<!--                    <field name="id"/>-->
<!--                    <field name="create_date"/>-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>