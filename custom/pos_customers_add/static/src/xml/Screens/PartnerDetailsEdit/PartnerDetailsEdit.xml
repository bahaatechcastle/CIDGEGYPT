<?xml version="1.0" encoding="UTF-8" ?>


<templates id="template" xml:space="preserve">
    <t t-name="PartnerDetailsEditNew" t-inherit="point_of_sale.PartnerDetailsEdit" t-inherit-mode="extension" owl="1">
		<xpath expr="//div[hasclass('partner-details-right')]" position="replace">
                <div class="partner-details-right">
                    <div class="partner-detail">
                        <span class="label">Language</span>
                        <select class="detail client-lang needsclick" name="lang"
                                t-on-change="captureChange">
                            <t t-foreach="env.pos.langs" t-as="lang" t-key="lang.id">
                                <option t-att-value="lang.code"
                                        t-att-selected="props.partner.lang ? ((lang.code === props.partner.lang) ? true : undefined) : lang.code === env.pos.user.lang? true : undefined">
                                    <t t-esc="lang.name"/>
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="partner-detail">
                        <span class="label">Email</span>
                        <input class="detail client-email" name="email" type="email"
                               t-on-change="captureChange"
                               t-att-value="props.partner.email || ''"/>
                    </div>
                    <div class="partner-detail">
                        <span class="label">Email Parent</span>
                        <input class="detail client-email-parent" name="email_parent" type="email"
                               t-on-change="captureChange"
                               t-att-value="props.partner.email_parent || ''"/>
                    </div>
                    <div class="partner-detail">
                        <span class="label">Phone</span>
                        <input class="detail client-phone" name="phone" type="tel"
                               t-on-change="captureChange"
                               t-att-value="props.partner.phone || ''"/>
                    </div>
                    <div class="partner-detail">
                        <span class="label">Phone 2</span>
                        <input class="detail client-phone_2" name="phone_2" type="tel"
                               t-on-change="captureChange"
                               t-att-value="props.partner.phone_2 || ''"/>
                    </div>
                    <div class="partner-detail">
                        <span class="label">Phone Whatsapp</span>
                        <input class="detail client-phone-whatsapp" name="phone_whatsapp" type="tel"
                               t-on-change="captureChange"
                               t-att-value="props.partner.phone_whatsapp || ''"/>
                    </div>
                    <div class="partner-detail">
                        <span class="label">Barcode</span>
                        <input class="detail barcode" name="barcode" t-on-change="captureChange"
                               t-att-value="props.partner.barcode || ''"/>
                    </div>
                    <div class="partner-detail">
                        <span class="label">Tax ID</span>
                        <input class="detail vat" name="vat" t-on-change="captureChange"
                               t-att-value="props.partner.vat || ''"/>
                    </div>
                    <div t-if="env.pos.pricelists.length gt 1" class="partner-detail">
                        <span class="label">Pricelist</span>
                        <select class="detail needsclick" name="property_product_pricelist"
                                t-on-change="captureChange">
                            <t t-foreach="env.pos.pricelists" t-as="pricelist"
                               t-key="pricelist.id">
                                <option t-att-value="pricelist.id"
                                        t-att-selected="props.partner.property_product_pricelist ? (pricelist.id === props.partner.property_product_pricelist[0] ? true : undefined) : pricelist.id === env.pos.default_pricelist.id ? true : undefined">
                                    <t t-esc="pricelist.display_name"/>
                                </option>
                            </t>
                        </select>
                    </div>
                </div>
        </xpath>
        <xpath expr="//div[hasclass('partner-details-left')]" position="replace">
            <div class="client-details-left">
                <div class="partner-detail">
                    <span class="label">Parent Name</span>
                    <input class="detail client-address-parent_name" name="parent_name"
                           t-on-change="captureChange"
                           t-att-value="props.partner.parent_name || ''"
                    />
                </div>
                <div class="partner-detail">
                    <span class="label">Number</span>
                    <input class="detail client-address-id" name="id"
                           t-on-change="captureChange"
                           t-att-value="props.partner.id || ''"
                    />
                </div>
                <div class="partner-detail">
                    <span class="label">Date</span>
                    <input class="detail client-address-create_date" name="create_date"
                           t-on-change="captureChange"
                           t-att-value="props.partner.create_date || ''"
                    />
                </div>
                <div class="partner-detail">
                    <span class="label">Street</span>
                    <input class="detail client-address-street" name="street"
                           t-on-change="captureChange" t-att-value="props.partner.street || ''"
                           placeholder="Street"/>
                </div>
                <div class="partner-detail">
                    <span class="label">City</span>
                    <input class="detail client-address-city" name="city"
                           t-on-change="captureChange" t-att-value="props.partner.city || ''"
                           placeholder="City"/>
                </div>
                <div class="partner-detail">
                    <span class="label">Postcode</span>
                    <input class="detail client-address-zip" name="zip"
                           t-on-change="captureChange" t-att-value="props.partner.zip || ''"
                           placeholder="ZIP"/>
                </div>
                <div class="partner-detail">
                    <span class="label">State</span>
                    <select class="detail client-address-states needsclick" name="state_id"
                            t-on-change="captureChange">
                        <option value="">None</option>
                        <t t-foreach="env.pos.states" t-as="state" t-key="state.id">
                            <option t-if="props.partner.country_id[0] == state.country_id[0]"
                                    t-att-value="state.id"
                                    t-att-selected="props.partner.state_id ? ((state.id === props.partner.state_id[0]) ? true : undefined) : undefined">
                                <t t-esc="state.name"/>
                            </option>
                        </t>
                    </select>
                </div>
                <div class="partner-detail">
                    <span class="label">Country</span>
                    <select class="detail client-address-country needsclick" name="country_id"
                            t-on-change="captureChange">
                        <option value="">None</option>
                        <t t-foreach="env.pos.countries" t-as="country" t-key="country.id">
                            <option t-att-value="country.id"
                                    t-att-selected="props.partner.country_id ? ((country.id === props.partner.country_id[0]) ? true : undefined) : undefined">
                                <t t-esc="country.name"/>
                            </option>
                        </t>
                    </select>
                </div>
                <div class="partner-detail">
                    <span class="label">Profession</span>
                    <input class="detail client-address-profession" name="profession"
                           t-on-change="captureChange"
                           t-att-value="props.partner.profession || ''"
                    />
                </div>
                <div class="partner-detail">
                    <span class="label">Source</span>
                    <input class="detail client-address-source" name="source"
                           t-on-change="captureChange"
                           t-att-value="props.partner.source || ''"
                    />
                </div>
                <div class="partner-detail">
                    <span class="label">Note</span>
                    <input class="detail client-address-note" name="note"
                           t-on-change="captureChange"
                           t-att-value="props.partner.note || ''"
                    />
                </div>
<!--                <div class="client-detail">-->
<!--                    <span class="label">Source</span>-->
<!--                    <select class="detail client-address-source needsclick" name="source"-->
<!--                            t-on-change="captureChange">-->
<!--                        <option value="">None</option>-->
<!--                        <t t-foreach="env.pos.sources" t-as="source" t-key="source.id">-->
<!--                            <option t-att-value="source.id"-->
<!--                                    t-att-selected="props.partner.source ? ((source.id === props.partner.source[0]) ? true : undefined) : undefined">-->
<!--                                <t t-esc="source.name"/>-->
<!--                            </option>-->
<!--                        </t>-->
<!--                    </select>-->
<!--                </div>-->
            </div>
        </xpath>
	</t>
</templates>