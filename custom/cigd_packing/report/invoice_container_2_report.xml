<odoo>
    <data>
        <record id="action_report_invoice_cidg_2" model="ir.actions.report">
            <field name="name">Invoice Containers 2</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">cigd_packing.report_invoice_container_2</field>
            <field name="report_file">cigd_packing.report_invoice_container_2</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="print_report_name">'Print - %s(Invoice)' % (object.name).replace('/', '')</field>
            <field name="binding_type">report</field>
        </record>


        <record id="id_report_invoice_container_2_paper" model="report.paperformat">
            <field name="name">report Invoice container 2</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
            <field name="report_ids"
                   eval="[(6,0, [ref('cigd_packing.action_report_invoice_cidg_2')])]"/>
        </record>


        <template id="report_invoice_container_2">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            <style>

                                td {
                                border:1px solid #000000;
                                text-align:left;
                                font-size:13px;
                                font-weight:bold;
                                padding:2px
                                }
                                table {
                                border:2px solid black;
                                }

                            </style>
                            <div class="header">
                                <div class="row" style="border: 1px solid black;">
                                    <div class="col-7"
                                         style="padding-left: 30px;">
                                        <span style="font-size: 30px; font-family: 'Times New Roman', Times, serif; color:#6652ad; font-weight: bold; padding-top: 10px; display: block;"
                                              t-field="o.company_id.name"/>
                                    </div>
                                    <div class="col-7" style="padding-left: 20px">
                                        <span style="padding-top: 5px">
                                            <img t-if="o.company_id.logo"
                                                 t-att-src="image_data_uri(o.company_id.logo)"
                                                 style="max-height: 100px;" alt="Logo"/>
                                        </span>
                                    </div>

                                </div>
                                <br></br>
                                <div style="border: 3px solid #5c7a2b;"/>
                                <br></br>
                                <div class="row">
                                    <div class="col-6">
                                        <table>
                                            <tr>
                                                <td style="border: 2px solid black; width: 50px; text-align:center;">
                                                    <span>Date</span>
                                                </td>
                                                <td style="border: 2px solid black; width: 100px; text-align:center;">
                                                    <span t-field="o.invoice_date"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-6"
                                         style="font-size:20px; color:rgb(255, 0, 0); font-weight:bold;">
                                        Invoice :
                                        <span t-field="o.name"/>
                                    </div>
                                </div>
                                <br></br>
                            </div>
                            <div class="body">
                                <div class="row">
                                    <div class="col-2">
                                        <div style="text-align:left; font-size:20px; font-weight: bold;">seller :-</div>
                                    </div>
                                    <div class="col-4" style="text-align:left; font-size:16px">
                                        <div t-field="o.company_id.name" style="padding-top: 5px"/>
                                        <div t-field="o.company_id.street" style="padding-top: 5px"/>
                                        <div t-field="o.company_id.street2" style="padding-top: 5px"/>
                                        <div style="padding-top: 5px">
                                            <span t-field="o.company_id.city"/>
                                            <span t-field="o.company_id.state_id"/>
                                            <span t-field="o.company_id.city"/>
                                        </div>
                                        <div t-field="o.company_id.country_id" style="padding-top: 5px"/>
                                        <div style="padding-top: 5px">
                                            phone :-
                                            (<span t-field="o.company_id.zip"/>)
                                            <span t-field="o.company_id.phone"/>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div style="text-align:left; font-size:20px; font-weight: bold;">Consignee :-
                                        </div>
                                    </div>
                                    <div class="col-4" style="text-align:left; font-size:16px">
                                        <div t-if="o.partner_shipping_id"
                                             style="margin-right: 10px; max-height:50%;min-height:50%;">
                                            <div t-field="o.partner_shipping_id"
                                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"
                                                 name="purchase_shipping_address"/>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <div style="height: 100%;width: 100%;">
                                    <div>
                                        <table width="100%"
                                               style="border: 2px solid black;">
                                            <thead>
                                                <tr style="height: 30px;">
                                                    <td style="padding:10px; text-align:center; width: 5%; font-size:14px">
                                                        Item.
                                                    </td>
                                                    <td style="padding:10px; text-align:center; width: 20%; font-size:14px">
                                                        Material
                                                    </td>
                                                    <td style="padding:10px; text-align:center; width: 10%; font-size:14px">
                                                        Shape
                                                    </td>
                                                    <td style="padding:10px; text-align:center; width: 13%; font-size:14px">
                                                        Surface
                                                    </td>
                                                    <td style="padding:10px; text-align:center; width: 20%; font-size:14px">
                                                        Description
                                                    </td>
                                                    <td style="padding:10px; text-align:center; width: 10%; font-size:14px">
                                                        Quantity
                                                    </td>
                                                    <td style="padding:10px; text-align:center; width: 12%; font-size:14px">
                                                        Price $
                                                    </td>
                                                    <td style="padding:10px; text-align:center; width: 10%; font-size:14px">
                                                        Total $
                                                    </td>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                                    <!--                                                        <p t-if="line.container_num.name == con.container_num_id.name">-->
                                                    <tr style="height: 40px;">
                                                        <td style=" padding:10px; text-align:center; font-size:12px">
                                                            <t t-esc="line_index +1"/>
                                                        </td>
                                                        <td style=" padding:10px; text-align:center; font-size:12px">
                                                            <span t-field="line.product_id"/>
                                                        </td>
                                                        <td style=" padding:10px; text-align:center; font-size:12px">
                                                            <span t-field="line.shape"/>
                                                        </td>
                                                        <td style=" padding:10px; text-align:center; font-size:12px">
                                                            <span t-field="line.surface"/>
                                                        </td>
                                                        <td style=" padding:10px; text-align:center; font-size:12px">
                                                            <span t-field="line.name"/>
                                                        </td>
                                                        <td style=" padding:10px; text-align:center; font-size:12px">
                                                            <span t-field="line.quantity"/>
                                                            <span t-field="line.product_uom_id"/>
                                                        </td>
                                                        <td style=" padding:10px; text-align:center; font-size:12px">
                                                            <span t-field="line.price_unit"/>/
                                                            <span t-field="line.product_uom_id"/>
                                                        </td>
                                                        <td style=" padding:10px; text-align:center; font-size:12px">
                                                            <span t-field="line.price_subtotal"/>
                                                        </td>
                                                    </tr>
                                                    <!--                                                        </p>-->
                                                </t>
                                                <tr>
                                                    <td colspan="5"
                                                        style=" padding:10px; text-align:center; font-size:14px; color:rgb(255, 0, 0)">
                                                        <span>Total</span>
                                                    </td>
                                                    <td style=" padding:10px; text-align:center; font-size:14px; color:rgb(255, 0, 0)">
                                                        <span t-field="o.total_m2"/>
                                                        <span>M2</span>
                                                    </td>
                                                    <td style=" padding:10px; text-align:center; font-size:14px; color:rgb(255, 0, 0)">

                                                    </td>
                                                    <td style=" padding:10px; text-align:center; font-size:14px; color:rgb(255, 0, 0)">
                                                        <span t-field="o.amount_total"/>
                                                        <span t-field="o.account_number.currency_id"/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <br></br>
                                    <div>
                                        <t t-foreach="o.container_num" t-as="con">
                                            <div class="row">
                                                <div class="col-8">
                                                    <div style="text-align:center; color:rgb(255, 0, 0); font-weight: bold;">
                                                        Containers
                                                        <span style="font-weight: bold; color:black"
                                                              t-field="con.container_num_id.name"/>
                                                    </div>
                                                    <br/>
                                                    <div>
                                                        1.The Quantity (m2):-
                                                        <span style="font-weight: bold; color:black"
                                                              t-field="con.total_m2_con"/>
                                                        m2
                                                    </div>
                                                    <br/>
                                                    <div>
                                                        <span>
                                                            2.Number Of Boxs :-
                                                            <span style="font-weight: bold;" t-field="con.total_box"/>
                                                        </span>
                                                        <span>
                                                               Number Of Pallets :-
                                                            <span style="font-weight: bold;"
                                                                  t-field="con.total_pallets"/>
                                                        </span>
                                                        <span>
                                                               Number Of Bundles :-
                                                            <span style="font-weight: bold;"
                                                                  t-field="con.total_bundle"/>
                                                        </span>
                                                    </div>
                                                    <br/>
                                                    <div>
                                                        3.HS Code :-
                                                        <span style="font-weight: bold; color:black"
                                                              t-field="o.hs_code"/>
                                                    </div>
                                                    <br/>
                                                    <div>
                                                        <span>
                                                            4.Net Weight (KG) :-
                                                            <span style="font-weight: bold; color:black"
                                                                  t-field="con.total_nw"/>
                                                        </span>
                                                        <span>
                                                               Gross Weight(KG) :-
                                                            <span style="font-weight: bold;"
                                                                  t-field="con.total_gw"/>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                    <br></br>
                                    <div class="row">
                                        <div class="col-8">
                                            <div style="text-align:center; color:rgb(255, 0, 0); font-weight: bold;">
                                                Terms &#160; Condtitions
                                            </div>
                                            <br></br>
                                            <div>
                                                1.Goods are made in Egypt.
                                            </div>
                                            <br></br>
                                            <div>
                                                2.Port of Destination :-
                                                <span style="font-weight: bold;" t-field="o.po_destination"/>
                                            </div>
                                            <br></br>
                                            <div>
                                                3.Terms of Payment :-
                                                <span style="font-weight: bold;" t-field="o.terms_of_payment"/>
                                            </div>
                                            <br></br>
                                            <div>
                                                4.The prices are
                                                <span style="font-weight: bold;" t-field="o.the_prices_are"/>
                                            </div>
                                            <br></br>
                                            <div>
                                                5.Containers NO. :-
                                                <span style="font-weight: bold;" t-field="o.Container_no"/>
                                            </div>
                                            <br></br>
                                            <div>
                                                6.Shipping by sea
                                            </div>
                                            <br></br>
                                            <div>
                                                7.Port of Loading :-
                                                <span style="font-weight: bold;" t-field="o.port_of_loading"/>
                                            </div>
                                            <br></br>
                                            <div>
                                                8.The Commercial Invoice related to Proforma Invoice NO.
                                                <span style="font-weight: bold;" t-field="o.name"/>
                                            </div>
                                        </div>
                                    </div>
                                    <br></br>
                                    <div class="row">
                                        <div class="col-8">
                                            <div style="text-align:center; color:rgb(255, 0, 0); font-weight: bold;">
                                                Please make all payment to:-
                                            </div>
                                            <br></br>
                                            <div>
                                                Beneficiary :-
                                                <span style="font-weight: bold;" t-field="o.company_id.name"/>
                                            </div>
                                            <br></br>
                                            <div>
                                                Bank Name :-
                                                <span style="font-weight: bold;" t-field="o.bank_details.name"/>
                                            </div>
                                            <br></br>
                                            <div>
                                                Bank Branch :-
                                                <span style="font-weight: bold;" t-field="o.bank_details.branch"/>
                                            </div>
                                            <br></br>
                                            <div>
                                                Bank Address :-
                                                <span style="font-weight: bold;" t-field="o.bank_details.street"/>
                                                ,
                                                <span style="font-weight: bold;" t-field="o.bank_details.street2"/>
                                                ,
                                                <span style="font-weight: bold;" t-field="o.bank_details.city"/>
                                                ,
                                                <span style="font-weight: bold;" t-field="o.bank_details.state"/>
                                            </div>
                                            <br></br>
                                            <div>
                                                Account No :-
                                                <span style="font-weight: bold;" t-field="o.account_number.acc_number"/>
                                            </div>
                                            <br></br>
                                            <div>
                                                Swift Code :-
                                                <span style="font-weight: bold;" t-field="o.bank_details.swift_code"/>
                                            </div>
                                            <br></br>
                                            <div>
                                                USD IBAN :-
                                                <span style="font-weight: bold;" t-field="o.bank_details.usd_iban"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_structure"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>